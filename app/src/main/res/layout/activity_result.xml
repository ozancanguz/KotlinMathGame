<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/third"
    tools:context=".Views.ResultActivity">

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="229dp"
        android:text="EXIT"
        app:layout_constraintStart_toEndOf="@+id/playagainbutton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="CONGRATULATIONS"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/TextScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextScore"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginBottom="75dp"
        android:text="Your Score: "
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/playagainbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/playagainbutton"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="72dp"
        android:text="Play Again"
        app:layout_constraintBaseline_toBaselineOf="@+id/exitButton"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>